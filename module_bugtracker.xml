<?xml version="1.0" encoding="UTF-8"?>
<project name="module_bugtracker" default="compile.module.bugtracker">
  <dirname property="module.bugtracker.basedir" file="${ant.file.module_bugtracker}"/>
  
  <property name="module.jdk.home.bugtracker" value="${project.jdk.home}"/>
  <property name="module.jdk.bin.bugtracker" value="${project.jdk.bin}"/>
  <property name="module.jdk.classpath.bugtracker" value="${project.jdk.classpath}"/>
  
  <property name="compiler.args.bugtracker" value="-encoding UTF-8 -source 8 -target 8 ${compiler.args}"/>
  
  <property name="bugtracker.output.dir" value="${module.bugtracker.basedir}/out/production/bugtracker"/>
  <property name="bugtracker.testoutput.dir" value="${module.bugtracker.basedir}/out/test/bugtracker"/>
  
  <path id="bugtracker.module.bootclasspath">
    <!-- Paths to be included in compilation bootclasspath -->
  </path>
  
  <path id="bugtracker.module.production.classpath">
    <path refid="${module.jdk.classpath.bugtracker}"/>
    <path refid="library.mysql-connector.classpath"/>
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="bugtracker.runtime.production.module.classpath">
    <pathelement location="${bugtracker.output.dir}"/>
    <path refid="library.mysql-connector.classpath"/>
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="bugtracker.module.classpath">
    <path refid="${module.jdk.classpath.bugtracker}"/>
    <pathelement location="${bugtracker.output.dir}"/>
    <path refid="library.mysql-connector.classpath"/>
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  <path id="bugtracker.runtime.module.classpath">
    <pathelement location="${bugtracker.testoutput.dir}"/>
    <pathelement location="${bugtracker.output.dir}"/>
    <path refid="library.mysql-connector.classpath"/>
    <pathelement location="${path.variable.maven_repository}/junit/junit/4.12/junit-4.12.jar"/>
    <pathelement location="${path.variable.maven_repository}/org/hamcrest/hamcrest-core/1.3/hamcrest-core-1.3.jar"/>
  </path>
  
  
  <patternset id="excluded.from.module.bugtracker">
    <patternset refid="ignored.files"/>
  </patternset>
  
  <patternset id="excluded.from.compilation.bugtracker">
    <patternset refid="excluded.from.module.bugtracker"/>
  </patternset>
  
  <path id="bugtracker.module.sourcepath">
    <dirset dir="${module.bugtracker.basedir}">
      <include name="src"/>
    </dirset>
  </path>
  
  <path id="bugtracker.module.test.sourcepath">
    <dirset dir="${module.bugtracker.basedir}">
      <include name="test"/>
    </dirset>
  </path>
  
  
  <target name="compile.module.bugtracker" depends="compile.module.bugtracker.production,compile.module.bugtracker.tests" description="Compile module bugtracker"/>
  
  <target name="compile.module.bugtracker.production" depends="register.custom.compilers" description="Compile module bugtracker; production classes">
    <mkdir dir="${bugtracker.output.dir}"/>
    <javac2 destdir="${bugtracker.output.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bugtracker}/javac">
      <compilerarg line="${compiler.args.bugtracker}"/>
      <bootclasspath refid="bugtracker.module.bootclasspath"/>
      <classpath refid="bugtracker.module.production.classpath"/>
      <src refid="bugtracker.module.sourcepath"/>
      <patternset refid="excluded.from.compilation.bugtracker"/>
    </javac2>
    
    <copy todir="${bugtracker.output.dir}">
      <fileset dir="${module.bugtracker.basedir}/src">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="compile.module.bugtracker.tests" depends="register.custom.compilers,compile.module.bugtracker.production" description="compile module bugtracker; test classes" unless="skip.tests">
    <mkdir dir="${bugtracker.testoutput.dir}"/>
    <javac2 destdir="${bugtracker.testoutput.dir}" debug="${compiler.debug}" nowarn="${compiler.generate.no.warnings}" memorymaximumsize="${compiler.max.memory}" fork="true" executable="${module.jdk.bin.bugtracker}/javac">
      <compilerarg line="${compiler.args.bugtracker}"/>
      <bootclasspath refid="bugtracker.module.bootclasspath"/>
      <classpath refid="bugtracker.module.classpath"/>
      <src refid="bugtracker.module.test.sourcepath"/>
      <patternset refid="excluded.from.compilation.bugtracker"/>
    </javac2>
    
    <copy todir="${bugtracker.testoutput.dir}">
      <fileset dir="${module.bugtracker.basedir}/test">
        <patternset refid="compiler.resources"/>
        <type type="file"/>
      </fileset>
    </copy>
  </target>
  
  <target name="clean.module.bugtracker" description="cleanup module">
    <delete dir="${bugtracker.output.dir}"/>
    <delete dir="${bugtracker.testoutput.dir}"/>
  </target>
</project>